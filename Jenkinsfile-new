pipeline {
    agent {
		label 'docker'
	}
	stages {
		stage('Package Application'){
			steps {
				sh 'mvn clean package -Dmaven.test.skip=true'
			}
		}
		stage('Build Docker Image'){
			steps {
				sh 'docker build -t opnind03.host.mobistar.be:32006/de/pands-acc .'
			}	
		}
		stage('Scan Image using Trivy'){
			steps {
				sh 'trivy image --exit-code 0 --format template --template "@junit.tpl" -o junit-report.xml --severity HIGH,CRITICAL opnind03.host.mobistar.be:32006/de/pands-acc'
				junit allowEmptyResults: true, testResults: 'junit-report.xml'
			}	
		}
		stage('Push Docker Image to Registry'){
			steps {
				sh 'docker push opnind03.host.mobistar.be:32006/de/pands-acc'
			}	
		}
		stage('Deploy App on DEV Cluster'){
			steps {
			    sh label: '', script: 'sudo oc login https://opndev.host.mobistar.be:8443 -u admin -p admin  --insecure-skip-tls-verify=true'
				sh 'sudo oc project app'
				sh 'sudo docker login opnind03.host.mobistar.be:32006 -u admin -p orange@123'
				// sh 'sudo oc delete svc/pands-acc'
				// sh 'sudo oc delete dc/pands-acc'
				sh 'sudo oc new-app --docker-image="opnind03.host.mobistar.be:32006/de/pands-acc:latest" --insecure-registry=true'
			}	
		}
		stage('Release Deployment on UAT Cluster'){
			steps {
				input 'Would you like to Procced?'
				sh label: '', script: 'sudo oc login https://opndev.host.mobistar.be:8443 -u admin -p admin  --insecure-skip-tls-verify=true'
				sh 'sudo oc project uat-app'
				sh 'sudo docker login opnind03.host.mobistar.be:32006 -u admin -p orange@123'
				//sh 'sudo oc delete svc/pands-acc'
				//sh 'sudo oc delete dc/pands-acc'
				sh 'sudo oc new-app --docker-image="opnind03.host.mobistar.be:32006/de/pands-acc:latest" --insecure-registry=true'
			}	
		}
	}
}